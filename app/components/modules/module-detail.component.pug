div(class="w3-container")
  h1 {{ module.name }}
  a(ng-href="/module/{{module._id}}/edit" class="w3-btn w3-round w3-teal" title="Edit")
    span
      i(class="fa fa-edit" aria-hidden="true")
      span &nbsp;Edit
  a(ng-click="deleteModule(module._id)" class="w3-btn w3-round w3-red w3-margin-left" title="Delete")
    span
      i(class="fa fa-trash" aria-hidden="true")
      span &nbsp;Delete
  p {{ module.compulsory ? 'Compulsory' : 'Elective' }} Subject
  p
    b Description:&nbsp;
    span {{ module.description}}
  p
    b Objective:&nbsp;
    span {{ module.objective}}

  h2 Linked Courses
  p
    ul(class="list")
      li(ng-repeat="course in courses")
        a(ng-href="/course/{{ course._id }}" class="w3-btn w3-blue w3-round") {{ course.number + ' | ' + course.name }}
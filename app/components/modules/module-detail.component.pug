div(class="w3-container")
  h1 {{ module.name }}
  a(ng-click="deleteModule(module.id)" class="w3-btn w3-round w3-red" title="Delete")
    span
      i(class="fa fa-trash" aria-hidden="true")
      span &nbsp;Delete
  p {{ module.compulsory ? 'Compulsory' : 'Elective' }} Subject
  p
    b ID:&nbsp;
    span {{ module.id }}
  p
    b Description:&nbsp;
    span {{ module.description}}
  p
    b Objective:&nbsp;
    span {{ module.objective}}

  h2 Linked Courses
  p
    ul(class="list")
      li(ng-repeat="course in courses")
        a(ng-href="/course/{{ course.id }}" class="w3-btn w3-blue w3-round") {{ course.number + ' | ' + course.name }}
div(class="w3-card create-form")
  div(class="w3-container w3-blue")
    h2 New Course
  form(class="w3-container w3-padding-small")
    div(class="w3-row")
      label(class="w3-text-blue") Module:
      select(class="w3-select w3-teal" ng-model="moduleId")
        option(ng-repeat="module in modules" value="{{ module._id }}")
          a {{ module.name }}
    div(class="w3-row")
      label(class="w3-text-blue") Name:
      input(type="text" class="w3-input w3-border" ng-model="name")
    div(class="w3-row")
      label(class="w3-text-blue") Number:
      input(type="text" class="w3-input w3-border" ng-model="number")
    div(class="w3-row")
      label(class="w3-text-blue") ECTS:
      input(type="number" class="w3-input w3-border" min="1" max="50" ng-model="ects")
    div(class="w3-row")
      label(class="w3-text-blue") Type:
      input(type="text" class="w3-input w3-border" ng-model="type")
    div(class="w3-row")
      label(class="w3-text-blue") Lecturer:
      input(type="text" class="w3-input w3-border" ng-model="lecturer")
    div(class="w3-row")
      label(class="w3-text-blue") Description:
      input(type="text" class="w3-input w3-border" ng-model="description")
    div(class="w3-row")
      label(class="w3-text-blue") Objective:
      input(type="text" class="w3-input w3-border" ng-model="objective")
    br
    a(ng-click="createCourse()" class="w3-btn w3-round w3-red" title="Submit") Submit
